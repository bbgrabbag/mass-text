{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "lib": [
            "dom",
            "es2015"
        ],
        "sourceMap": true
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules/**/*"
    ],
    "include": [
        "src/**/*"
    ]
}